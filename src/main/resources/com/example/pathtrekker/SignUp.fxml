<AnchorPane prefHeight="756.0" prefWidth="1080.0" style="-fx-background-color: #F3E7D7;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pathtrekker.SignUpController">
   <children>
      <ImageView fitHeight="756.0" fitWidth="1080.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../Images/SignUpNew.png" />
         </image>
      </ImageView>
      <Button fx:id="SignUpCancel" layoutX="608.0" layoutY="580.0" mnemonicParsing="false" onMouseClicked="#CancelAction" prefHeight="44.0" prefWidth="378.0" style="-fx-background-color: #205A7A;" text="Cancel" textFill="#fffefe">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font>
         <effect>
            <Lighting diffuseConstant="1.5" specularConstant="0.0" specularExponent="13.4" surfaceScale="1.8">
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Label layoutX="571.0" layoutY="134.0" prefHeight="98.0" prefWidth="444.0" text="Join to Unlock The Best of Path Trekker" textFill="WHITE" wrapText="true">
         <font>
            <Font name="Arial Rounded MT Bold" size="35.0" />
         </font>
      </Label>
      <TextField fx:id="FirstName" layoutX="580.0" layoutY="245.0" prefHeight="35.0" prefWidth="426.0" promptText="First Name" />
      <TextField fx:id="LastName" layoutX="580.0" layoutY="293.0" prefHeight="35.0" prefWidth="426.0" promptText="Last Name" />
      <TextField fx:id="SignUpEmail" layoutX="580.0" layoutY="340.0" prefHeight="35.0" prefWidth="200.0" promptText="Enter E-mail" />
      <TextField fx:id="SignUpUsername" layoutX="793.0" layoutY="341.0" prefHeight="35.0" prefWidth="212.0" promptText="Enter Username" />
      <PasswordField fx:id="SignUpPassword" layoutX="579.0" layoutY="386.0" prefHeight="35.0" prefWidth="426.0" promptText="Enter Password" />
      <PasswordField fx:id="SignUpConfirmPassword" layoutX="579.0" layoutY="434.0" prefHeight="35.0" prefWidth="426.0" promptText="Confirm Password" />
      <TextField fx:id="ConPassTextField" layoutX="579.0" layoutY="434.0" prefHeight="35.0" prefWidth="426.0" promptText="Confirm Password" visible="false" />
      <TextField fx:id="PassTextField" layoutX="579.0" layoutY="386.0" prefHeight="35.0" prefWidth="426.0" promptText="Enter Password" visible="false" />
      <Button fx:id="SignUpJoinNow" layoutX="608.0" layoutY="518.0" mnemonicParsing="false" onMouseClicked="#JoinNowAction" prefHeight="44.0" prefWidth="378.0" style="-fx-background-color: #205A7A;" text="Join Now!" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font>
         <effect>
            <Lighting diffuseConstant="1.5" specularConstant="0.0" specularExponent="13.4" surfaceScale="1.8">
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      <CheckBox fx:id="ShowPassCheckBox" layoutX="712.0" layoutY="484.0" mnemonicParsing="false" onMouseClicked="#ShowPassCheckAction" text="SHOW PASSWORD" textFill="WHITE">
         <font>
            <Font name="Calibri Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </CheckBox>
   </children>
</AnchorPane>
