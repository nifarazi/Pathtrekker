<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:controller="com.example.pathtrekker.DestinationKhulnaController"
            xmlns="http://javafx.com/javafx/8.0"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="1080" prefHeight="756"
            style="-fx-background: #f8f8f8; -fx-padding: 20px;">

    <!-- Top Section: Back Button -->
    <top>
        <Button fx:id="backButton" text="Back" onAction="#handlebackButton"
                style="-fx-background-color: #bfb5b5; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px;" />
    </top>

    <!-- Center Section: ScrollPane with Destination Container -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-padding: 20px;">
            <VBox fx:id="destinationContainer" spacing="15.0" style="-fx-padding: 10px;" />
        </ScrollPane>
    </center>

</BorderPane>