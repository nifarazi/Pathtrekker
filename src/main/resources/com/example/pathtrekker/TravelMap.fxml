<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.canvas.Canvas?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.pathtrekker.TravelMapController">

    <Canvas fx:id="mapCanvas" width="1200" height="800" layoutX="0" layoutY="0"/>

    <TextField fx:id="inputField" layoutX="20" layoutY="20" prefWidth="200" promptText="Enter division name"/>

    <Button fx:id="visitedButton" text="Mark as Visited" layoutX="240" layoutY="20"
            style="-fx-background-color: white; -fx-text-fill: black; -fx-border-color: black; -fx-border-radius: 5px;"/>

    <Button fx:id="plannedButton" text="Mark as Planned" layoutX="370" layoutY="20"
            style="-fx-background-color: white; -fx-text-fill: black; -fx-border-color: black; -fx-border-radius: 5px;"/>

    <Button fx:id="backButton" text="Back to Profile" layoutX="20" layoutY="60" onAction="#handleBackToProfile"
            style="-fx-background-color: white; -fx-text-fill: black; -fx-border-color: black; -fx-border-radius: 5px;"/>

</AnchorPane>
