<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pathtrekker.ProfilePageController"
            fx:id="rootPane" prefWidth="1080" prefHeight="756">
    <!-- Background Image -->
    <ImageView fx:id="backgroundImage" fitWidth="1080" fitHeight="756">
        <image>
            <Image url="@../../../Images/ProfileFinal.png" />
        </image>
    </ImageView>

    <Label fx:id="dateTimeLabel" layoutX="900" layoutY="20" style="-fx-font-size: 16px; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-family: 'Roboto';" />

    <!-- Main Container -->
    <HBox fx:id="mainContainer" spacing="20" AnchorPane.topAnchor="120" AnchorPane.leftAnchor="85" AnchorPane.rightAnchor="20">

        <!-- View Itineraries Section -->
        <VBox fx:id="viewItinerariesSection" spacing="10" prefWidth="300"
              style="-fx-background-color: rgba(120,160,140,0.5); -fx-padding: 20px; -fx-border-radius: 100px; -fx-background-radius: 100px; -fx-background-insets: 0; -fx-border-insets: 0;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <ListView fx:id="itinerariesListView" prefHeight="400" />
        </VBox>

        <!-- Bucket List Section -->
        <VBox fx:id="bucketListSection" spacing="10" prefWidth="300"
              style="-fx-background-color: rgba(150,180,160,0.5); -fx-padding: 20px; -fx-border-radius: 100px; -fx-background-radius: 100px; -fx-background-insets: 0; -fx-border-insets: 0;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <ListView fx:id="bucketListView" prefHeight="350" />
            <TextField fx:id="bucketListInput" promptText="Enter place to visit" />
            <Button fx:id="addToListButton" text="Add to List" onAction="#handleAddToList" />
        </VBox>

        <!-- Profile Section -->
        <VBox fx:id="profileSection" spacing="20" prefWidth="300"
              style="-fx-background-color: rgba(100,150,130,0.5); -fx-padding: 20px; -fx-border-radius: 100px; -fx-background-radius: 100px; -fx-background-insets: 0; -fx-border-insets: 0;"
              AnchorPane.leftAnchor="400">
            <HBox spacing="10">
                <ImageView fitWidth="40" fitHeight="40" />
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            </HBox>
            <Label fx:id="nameKeyLabel" text="Name:" style="-fx-font-family: 'Roboto'; -fx-font-weight: bold; -fx-text-fill: white;-fx-font-size: 20px;" />
            <Label fx:id="fullNameLabel" text="Full Name: "  style="-fx-font-family: 'Roboto'; -fx-text-fill: white;-fx-font-size: 20px;"  />
            <Label fx:id="usernameKeyLabel" text="Username:" style="-fx-font-family: 'Roboto'; -fx-font-weight: bold; -fx-text-fill: white;-fx-font-size: 20px;" />
            <Label fx:id="usernameLabel" text="Username: "  style="-fx-font-family: 'Roboto'; -fx-text-fill: white;-fx-font-size: 20px;" />
            <Label fx:id="emailKeyLabel" text="Email:" style="-fx-font-family: 'Roboto'; -fx-font-weight: bold; -fx-text-fill: white;-fx-font-size: 20px;" />
            <Label fx:id="emailLabel" text="Email: "  style="-fx-font-family: 'Roboto'; -fx-text-fill: white;-fx-font-size: 20px;" />
        </VBox>

    </HBox>

    <!-- Home and Log Out Buttons -->
    <HBox spacing="10" AnchorPane.bottomAnchor="40" AnchorPane.rightAnchor="45">
        <Button fx:id="homeButton" text="Home" onAction="#handleHome" style="-fx-background-color: #85aa9b; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;" />
        <Button fx:id="logOutButton" text="Log Out" onAction="#handleLogOut" style="-fx-background-color: #85aa9b; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-cursor: hand;" />
    </HBox>

</AnchorPane>