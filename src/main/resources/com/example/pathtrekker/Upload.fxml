<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pathtrekker.UploadController">

    <!-- Background Image -->
    <ImageView fx:id="backgroundImage" fitWidth="1080" fitHeight="768" preserveRatio="false">
        <Image url="@/uploadphoto.png" />
    </ImageView>

    <!-- Image Preview -->
    <ImageView fx:id="imagePreview" layoutX="300" layoutY="150" fitWidth="300" fitHeight="200" />

    <!-- Select Image Button -->
    <Button fx:id="selectImageButton" layoutX="350" layoutY="380" text="Select Image" onAction="#selectImage"/>

    <!-- Caption Input Field -->
    <TextField fx:id="captionField" layoutX="300" layoutY="420" prefWidth="300" promptText="Enter caption"/>

    <!-- Upload Button -->
    <Button fx:id="uploadButton" layoutX="350" layoutY="470" text="Upload" onAction="#uploadPhoto"/>

    <!-- Home Button -->
    <Button fx:id="homeButton" layoutX="20" layoutY="30" text="HOME" onAction="#goToMoments"/>

</AnchorPane>
